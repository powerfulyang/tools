{
  "name": "@powerfulyang/components",
  "version": "0.5.8",
  "description": "react-components",
  "author": "powerfulyang",
  "license": "MIT",
  "repository": "https://github.com/powerfulyang/tools.git",
  "files": [
    "dist"
  ],
  "main": "dist/lib/index.js",
  "module": "dist/es/index.js",
  "style": "dist/es/index.css",
  "sideEffects": false,
  "scripts": {
    "prettier": "prettier --write \"src/**/*.{js,jsx,tsx,ts,json,md}\"",
    "fix:style": "stylelint --fix \"src/**/*.scss\" --syntax scss",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --format=pretty ./src",
    "build": "rimraf dist && cross-env NODE_ENV=production rollup -c",
    "build:dev": "rimraf dist && cross-env NODE_ENV=development rollup -c",
    "watch:build": "rimraf dist && cross-env NODE_ENV=development rollup -c --watch"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier"
    }
  },
  "peerDependencies": {
    "react": "16.13.1",
    "react-dom": "16.13.1"
  },
  "dependencies": {
    "@powerfulyang/hooks": "^0.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@powerfulyang/lint": "^0.0.1",
    "@powerfulyang/node-utils": "^0.0.1",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-url": "^5.0.1",
    "@svgr/rollup": "^5.4.0",
    "@types/classnames": "^2.2.10",
    "@types/enzyme": "^3.10.7",
    "@types/lodash-es": "^4.17.3",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "autoprefixer": "^9.8.6",
    "cross-env": "^7.0.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "husky": "^4.3.0",
    "lodash-es": "^4.17.15",
    "node-sass": "^4.14.1",
    "rollup": "^2.28.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-postcss": "^3.1.8",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.27.3",
    "tailwindcss": "^1.8.10"
  }
}
