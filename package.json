{
  "name": "root",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean": "lerna clean -y && rimraf node_modules",
    "turbo:build": "turbo run build --filter @powerfulyang/*",
    "manypkg:check": "manypkg check",
    "home:qa:dev": "lerna exec --scope powerfulyang.com -- pnpm run qa:dev"
  },
  "workspaces": [
    "packages/*",
    "project/*"
  ],
  "dependencies": {
    "@changesets/cli": "2.26.1",
    "@manypkg/cli": "0.20.0",
    "lerna": "6.6.1",
    "turbo": "1.9.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "18",
        "react-dom": "18"
      }
    }
  }
}
